---
import PerksHorizontal from './PerksHorizontal.astro'

const { perks } = Astro.props
---

<h3 class='text-3xl text-center font-bold tracking-widest mb-16 w-full'>
  Compare
</h3>
<header class='grid grid-cols-2'>
  <div>
    <p class='font-bold tracking-widest'>The features</p>
  </div>
  <div class='flex justify-between'>
    <p class='font-bold tracking-widest w-full text-center'>Basic</p>
    <p class='font-bold tracking-widest w-full text-center'>Pro</p>
    <p class='font-bold tracking-widest w-full text-center'>Business</p>
  </div>
</header>

<hr class='mt-6' />

{
  perks.map((item) => (
    <PerksHorizontal
      name={item.name}
      basic={item.basic}
      pro={item.pro}
      business={item.business}
    />
  ))
}

---
import IconArrow from '../../assets/svg/shared/IconArrow.astro'
---

<article class='h-[290px] w-full relative'>
  <img
    src='/assets/shared/mobile/bg-beta.jpg'
    srcset='
            /assets/shared/mobile/bg-beta.jpg 500w,
            /assets/shared/tablet/bg-beta.jpg 768w,
            /assets/shared/desktop/bg-beta.jpg 1024w
          '
    role='presentation'
    class='w-full h-[290px] object-cover bottom-0 absolute'
  />
  <div
    class='h-[290px] w-full bottom-0 absolute px-8 lg:flex lg:justify-center'
  >
    <div
      class='w-full h-full flex flex-col justify-evenly gap-6 md:flex-row md:items-center md:gap-0 md:justify-between lg:max-w-[1100px]'
    >
      <h3 class='uppercase font-bold text-4xl md:w-1/2 tracking-wider'>
        We're in Beta. Get your invite today!
      </h3>
      <div class='flex justify-start gap-5 items-center'>
        <a
          href='#'
          class='uppercase font-semibold tracking-widest hover:underline hover:decoration-white'
          >Get an invite</a
        >
        <IconArrow color='white' />
      </div>
    </div>
  </div>
</article>

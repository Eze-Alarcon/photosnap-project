---
import Features from '../components/home/Features.astro'
import Header from '../components/shared/Header.astro'
import Body from '../layout/Body.astro'
import CardStory from '../components/home/CardStory.astro'
import ImageCard from '../components/shared/ImageCard.astro'
import Footer from '../components/shared/Footer.astro'
import Navbar from '../components/shared/Navbar.astro'

const homeStories = {
  img1: 'beautiful-stories.jpg',
  title1: 'Beautiful stories every time',
  content1:
    'We provide design templates to ensure your stories look terrific. Easily add photos, text, embed maps and media from other networks. Then share your story with everyone.',
  img2: 'designed-for-everyone.jpg',
  title2: 'Designed for everyone',
  content2:
    'Photosnap can help you create stories that resonate with your audience. Our tool is designed for photographers of all levels, brands, businesses you name it.',
}

const homeCardImages = [
  {
    img: 'mountains.jpg',
    title: 'The Mountains',
    author: 'John Appleseed',
  },
  {
    img: 'cityscapes.jpg',
    title: 'Sunset Cityscapes',
    author: 'Benjamin Cruz',
  },
  {
    img: '18-days-voyage.jpg',
    title: '18 Days Voyage',
    author: 'Alexei Borodin',
  },
  {
    img: 'architecturals.jpg',
    title: 'Architecturals',
    author: 'Samantha Brooke',
  },
]
---

<Body headTitle='Home'>
  <Navbar />
  <Header />
  <main
    class='w-full grid place-content-center gap-16 md:gap-0 md:place-content-between'
  >
    <section class='flex flex-col justify-center items-center gap-16 md:gap-0'>
      <CardStory
        img={homeStories.img1}
        title={homeStories.title1}
        story={homeStories.content1}
      />
      <CardStory
        img={homeStories.img2}
        title={homeStories.title2}
        story={homeStories.content2}
        reverse
      />
    </section>

    <section class='grid md:grid-cols-2'>
      {
        homeCardImages.map((item) => (
          <ImageCard img={item.img} title={item.title} author={item.author} />
        ))
      }
    </section>
    <section class='grid gap-14 px-10 md:mt-16'>
      <Features />
    </section>
  </main>
  <Footer />
</Body>
